    <Style x:Key="wfNameListDisplay" TargetType="ItemsControl">
        <Setter Property="ItemsSource" Value="{Binding CheckedList}" />
        <Setter Property="Margin" Value="4,0,4,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="AliceBlue" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Margin="0,0,0,4"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="4"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}"
                                    Text="{Binding Title}" />
                                <Button
                                    Margin="8,0,0,0"
                                    Command="{Binding EditListCommand}"
                                    Content="Edit"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                            </StackPanel>
                            <ScrollViewer Grid.Row="1">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type vm:FilterChipWrapper}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="AliceBlue" Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style>
                    <Setter Property="Control.Margin" Value="2,0,0,2" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>


    <Style
        x:Key="wfDocumentVMListBox"
        BasedOn="{StaticResource MaterialDesignListBox}"
        TargetType="ListBox">
        <Setter Property="BorderBrush" Value="AliceBlue" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type vm:DocumentViewModel}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding SearchName}" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="wfSearchResultText">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding StartText}" />
            <TextBlock
                Background="{Binding HighlightBrushBG}"
                Foreground="{Binding HighlightBrushFG}"
                Text="{Binding HighlightedText}" />
            <TextBlock Text="{Binding EndText}" />
        </StackPanel>
    </DataTemplate>

    <Style
        x:Key="wfFilterChipListBox"
        BasedOn="{StaticResource MaterialDesignListBox}"
        TargetType="ListBox">
        <Setter Property="BorderBrush" Value="AliceBlue" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type vm:FilterChipWrapper}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IsChecked}">
                            <TextBlock DataContext="{Binding Document}" Text="{Binding SearchName}" />
                        </CheckBox>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="AliceBlue" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="44" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                BorderBrush="AliceBlue"
                                BorderThickness="1" />
                            <StackPanel
                                Grid.Row="0"
                                Margin="0,0,0,4"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="8"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}"
                                    Text="{Binding Title}" />
                            </StackPanel>
                            <ScrollViewer Grid.Row="1">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsSource" Value="{Binding}" />
    </Style>
</ResourceDictionary>
